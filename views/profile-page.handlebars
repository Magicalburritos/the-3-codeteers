{{>profile-header user}}
<div class="tile is-ancestor">
    <div class="tile is-4 is-vertical is-parent">
      <div class="tile is-child box">
        <h2 class="profile-titles">Username: {{user.username}}</h2>
        <h2 class="profile-titles">Email: {{user.email}}</h2>
      </div>
      <div class="tile is-child box">
        <p class="profile-titles">Information: {{user.info}}</p>
        <article class="media">
          <div class="media-content">
            <button class="button" id="editBtn" onclick="switchDisplay()">Edit Info</button>
            <form id="profileEdit" style="display: none;">
              <div class="field">
                <p class="control">
                  <textarea class="textarea" id="infoText" placeholder="What should people know? (100 Characters max)"></textarea>
                </p>
              </div>
              <div class="field">
                <p class="control">
                  <button class="button" type="submit">Save Edit</button>
                </p>
              </div>
            </form>
          </div>
        </article>
      </div>
    </div>
    <div class="tile is-parent">
      <div class="tile is-child box">
        <h2 class="profile-titles">Recent Comments</h2>
        {{#each user.comments as |comment|}}
        <p>{{comment_text}} <span>Created on {{format_date created_at}} In {{type}} chat</span></p>
        <br>
        {{/each}}
        <p style="display:none;" id="Username">{{username}}</p>
        
      </div>
    </div>
  </div>

  <script src="/javascript/edit-info.js"></script>
  <script src="/javascript/logout.js"></script>
</body>

</html>