{{>profile-header user}}
<div class="column userProfile">
    <h2 class="column">Username: {{user.username}}</h2>
    <div class="userStats">
      <h4 class="column">Email: {{user.email}}</h4>      
        <h4 class="column">Info: {{user.info}}</h4>
        <article class="media">
            <div class="media-content">
            <button class="button" id="editBtn" onclick="switchDisplay()">Edit Info</button>
             <form id="profileEdit" style="display: none;"> 
                <div class="field">
                  <p class="control">
                    <textarea class="textarea" id="infoText" maxlength="100" placeholder="What should people know? (100 Characters max)"></textarea>
                  </p>
                </div>
                <div class="field">
                  <p class="control">
                    <button class="button" type="submit">Save Edit</button>
                  </p>
                </div>
              </form> 
            </div>
          </article>     
        <h4 class="column">recent scores</h4>
        <h4 class="column">recent post</h4>
        {{#each user.comments as |comment|}}
        {{>profile-comments comment}}
        {{/each}}  
    </div>
  </div>
  <p style="display: none;" id="uId">{{user.id}}</p>

  <script src="javascript/edit-info.js"></script>
  <script src="javascript/logout.js"></script>
</body>
</html>